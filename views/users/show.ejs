
<%- include ../partials/header.ejs %>


	<h1>User Profile</h1>

	<small><%= message %></small>

	<div>
		<img src="<%=user.imageURL%>" class="userImage">
	</div>

	<p>Username: <%=user.userName%></p>
	<p>Name: <%=user.firstName%> <%=user.lastName%></p>
	<p>Email: <%=user.email%></p>
	<p>Location: <%=user.location%></p>
	<br/>
	<p>Description: <br/><%=user.description%></p>
	
	<a href="/users/<%=user._id%>/edit"><button>EDIT</button></a>

	<h2>Projects</h2>
	<a href="/projects/new">
		<button type="submit">Create New Project</button>
	</a>
	<ul>
		<% for(let i = 0; i < user.projects.length; i++) { console.log("here's a project\n",user.projects[i]) %>
			<li>
				<a href="/projects/<%=user.projects[i]._id%>">
					<h3>Project Name: <%=user.projects[i].name%><br></h3>
					<p>Project Description: <%=user.projects[i].description%></p>
				</a>
				<img src="<%=user.projects[i].projectImage%>" class="projectImage" /> 
			</li>
		<% } %>
	</ul>


<%- include ../partials/footer.ejs %>
</html>


