
	<%- include ../partials/header.ejs %>
<div id="regForm">
	<div id="newForm">

		<h1>Profile Edit</h1>

		<form action="/users/<%=user._id%>?_method=PUT" method="POST">

			<input type="text" name="username" value="<%=user.userName%>"><br/>
			<input type="text" name="firstName" value="<%=user.firstName%>"><br/>
			<input type="text" name="lastName" value="<%=user.lastName%>"><br/>
			<input type="text" name="email" value="<%=user.email%>"><br/>
			<input type="text" name="location" value="<%=user.location%>"><br/>
			<input type="text" name="imageURL" value="<%=user.imageURL%>"><br/>

			<p>Please enter a description about your developer experiences in the box below:</p>

			<textarea name="description"><%=user.description%></textarea><br/>

			<button type="submit">Submit Changes</button><br/>
			
		</form>


		<form action="/users/<%=user._id%>?_method=DELETE" method="POST">
			<button type="submit">Delete Account</button>
		</form>
	</div>
</div>


<%- include ../partials/footer.ejs %>
</html>